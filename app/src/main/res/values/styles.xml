<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/background_gradient_start</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Luncher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="Headers">
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/poiret</item>
    </style>

    <style name="AppName">
        <item name="android:gravity">center</item>
        <item name="android:textSize">80sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">@font/mono</item>
    </style>

    <style name="NewRecord">
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/Red</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/poiret</item>
    </style>

    <style name="Buttons">
        <item name="android:fontFamily">@font/poiret</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NormalText">
        <item name="android:fontFamily">@font/poiret</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
